{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 4],
    "no-unused-vars": "warn",
    "no-undef": "error",
    "no-console": "off",
    "max-len": ["warn", { "code": 100, "ignoreUrls": true, "ignoreStrings": true }]
  }
}
